<!DOCTYPE html>
<html>
<head>
  <title>Book List</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Book List</h1>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach((book) => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td>
              <a href="/edit/<%= book.id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/delete/<%= book.id %>" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/add" class="btn btn-primary">Add Book</a>
  </div>
</body>
</html>
